            android:id="@+id/quickapp10"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp11"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp12"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>
