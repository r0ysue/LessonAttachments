<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp" >

    <LinearLayout
        android:id="@+id/appRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

    <View 
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/appRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp7"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp8"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </LinearLayout>

    <View 
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:id="@+id/appRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView 
            style="@style/AppLauncherTextView"
            android:id="@+id/quickapp9"
            android:layout_width="80dp"
